                                            "type": "string",
                                            "example": "ulid"
                                        },
                                        "event_id": {
                                            "type": "string",
                                            "example": "ulid"
                                        },
                                        "participant_id": {
                                            "type": "string",
                                            "example": "ulid"
                                        },
                                        "quantity": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "ticket_price": {
                                            "type": "number",
                                            "example": 50
                                        },
                                        "discount": {
                                            "type": "number",
                                            "example": 5
                                        },
                                        "total_amount": {
                                            "type": "number",
                                            "example": 95
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "CONFIRMED"
                                        },
                                        "tickets": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "string",
                                                        "example": "ulid"
                                                    },
                                                    "order_id": {
                                                        "type": "string",
                                                        "example": "ulid"
                                                    },
                                                    "event_id": {
                                                        "type": "string",
                                                        "example": "ulid"
                                                    },
                                                    "participant_id": {
                                                        "type": "string",
